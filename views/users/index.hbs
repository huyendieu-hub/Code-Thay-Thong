<div class="row" >
    <div class="col-md-12">
        <div class="card">
            <div class="card-header no-border ">
                <div class="d-flex justify-content-between">
                    <div class="row">
                        <h3 class="card-title">Danh sách người dùng</h3>
                        <a href="/users/create" class="btn btn-primary btn-sm" style="margin-left: 10px;">Thêm mới</a>
                    </div>
                    <div class="card-tools">
                        <div class="row">
                            <form class="form-inline ml-3" action="/users/list/result" method="get">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                      <input type="text" name="q" class="form-control float-right" placeholder="Search" type="Search">

                                      <div class="input-group-append">
                                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                      </div>
                                </div>
                                <!--<div class="input-group input-group-sm">
                                    <input class="form-control form-control-navbar" style="background-color:white;" id="search" name="q" type="search" placeholder="Search" aria-label="Search" autocomplete="off">
                                    <div class="input-group-append">
                                        <button class="btn btn-navbar" type="submit">
                                            <i class="fa fa-search">  
                                            </i>
                                        </button>
                                    </div>
                                </div>
                                <div class="input-group input-group-sm" id="search-results" style="position: absolute;width:203px;top:47px;">
                                </div>-->
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table" id="table">
                    <thead>
                        <tr>
                            <th style="width:5%">#</th>
                            <th style="width:20%">Tên đăng nhập</th>
                            <th style="width:20%">Tên</th>
                            <th style="width:20%">Kiểu</th>
                            <th style="width:20%">Ngày sinh</th>
                            <th style="width:15%"></th>
                        </tr>
                    </thead>
                    <tbody id="tbody_table_user">
                        {{#each list}}
                            <tr>
                                <td style="display: none;">{{this._id}}</td>
                                <td><a href="/users/details/{{this._id}}">{{incremented @index ../pagination.page}}</a></td>
                                <td style="width:20%">{{this.username}}</td>
                                <td style="width:20%">{{this.name}}</td>
                                <td style="width:20%">
                                    {{#iff this.type '==' 1}}Administrator{{/iff}}
                                    {{#iff this.type '==' 2}}Manager{{/iff}}
                                    {{#iff this.type '==' 3}}Doctor{{/iff}}
                                    {{#iff this.type '==' 4}}Patient{{/iff}}
                                </td>
                                <td style="width:20%">{{this.birthDate}}</td>
                                <td style="width:15%">
                                    <a href="/users/details/{{this.id}}" class="btn btn-default"><i class="fa fa-eye"></i></a>
                                    <a href="/users/{{this._id}}" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal_{{this._id}}">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                        <div class="modal fade" id="myModal_{{this._id}}">
                                            <div class="modal-dialog">
                                                <div class="modal-content">

                                                    <!-- Modal Header -->
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">Warning!</h4>
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    </div>

                                                    <!-- Modal body -->
                                                    <div class="modal-body">
                                                        Do you want to delete ?
                                                    </div>

                                                    <!-- Modal footer -->
                                                    <div class="modal-footer">
                                                        <a class="btn btn-danger" href="/users/delete/{{this._id}}" class="btn btn-default">Yes</a>
                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                </td>
                             </tr>
                        {{/each}}
                    </tbody>
                </table>
                <div class="d-flex justify-content-center">{{{paginateHelper pagination}}}</div>
            </div>
        </div>
    </div>
</div>
