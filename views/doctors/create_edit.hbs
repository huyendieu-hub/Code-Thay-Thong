<div class="row">
    <div class="col-md-12">
        <div class="card">
          <div class="card-header no-border">
            <div class="d-flex justify-content-between">
             
            </div>
          </div>
          <div class="card-body">
            <form action="/store" method="POST" autocomplete="off">
                <input type="hidden" name="_id" value="{{patient._id}}">
                <div class="row">
                    <label class="col-md-2">name</label>
                    <div class="col-md-4">
                        <input name="name" class="form-control"/>
                    </div>
                    <label class="col-md-2">Gender</label>
                    <div class="col-md-4">
                        <input name="gender" class="form-control"/>
                    </div>
                </div>
                <br>
                <div class="row">
                    <label class="col-md-2">birthDate</label>
                    <div class="col-md-4">
                        <input name="birthDate" class="form-control"/>
                    </div>
                </div>
                <br>
                <div class="row">
                    <label class="col-md-2">medicalCode</label>
                    <div class="col-md-4">
                        <input name="medicalCode" class="form-control"/>
                    </div>
                </div>
                <br>
                <div class="row">
                    <label class="col-md-2">jobAddress</label>
                    <div class="col-md-4">
                        <input name="jobAddress" class="form-control"/>
                    </div>
                </div>
                <br>
                <div class="row">
                    <label class="col-md-2">deceasedDateTime</label>
                    <div class="col-md-4">
                        <input name="deceasedDateTime" class="form-control"/>
                    </div>
                </div>
                <br>
                <center><button class="btn btn-default">Submit</button></center>
            </form>
          </div>
        </div>
     </div>
</div>