<div class="row">
    <div class="col-md-12">
        <div class="card">
          <div class="card-header no-border">
            <div class="d-flex justify-content-between">
              <a href="/listdiseases/create" class="btn btn-primary">Thêm mới</a>
            </div>
          </div>
          <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:5%">#</th>
                        <th style="width:10%">Mã bệnh</th>
                        <th style="width:30%">Tên bệnh</th>
                        <th style="width:40%">Miêu tả</th>
                        <th style="width:15%"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each list}}
                    <tr>
                        <td style="display: none;">{{this._id}}</td>
                        <td>{{incremented @index ../pagination.page}}</td>
                        <td>{{ this.disease }}</td>
                        <td>{{ this.name }}</td>
                        <td>{{ this.description }}</td>
                        <td>
                            <a href="/listdiseases/edit/{{this._id}}" class="btn btn-default"><i class="fa fa-edit"></i></a>
                            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal_{{this._id}}">
                                    <i class="fa fa-trash"></i>
                                </button>
                                <div class="modal fade" id="myModal_{{this._id}}">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                                <h4 class="modal-title">Warning!</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>

                                            <!-- Modal body -->
                                            <div class="modal-body">
                                                Do you want to delete ?
                                            </div>

                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <a class="btn btn-danger" href="/listdiseases/delete/{{this._id}}" class="btn btn-default">Yes</a>
                                                <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </td>
                    </tr>     
                    {{/each}}
                </tbody>
            </table>
            <div class="d-flex justify-content-center">{{{paginateHelper pagination}}}</div>
          </div>
        </div>
     </div>
</div>