<div class="row">
   <div class="col-md-12">
      <div class="card card-primary">
         <div class="card-header no-border">
            <h3 class="card-title">Create new Address</h3>
            <div class="d-flex justify-content-between">
            </div>
         </div>  
         <form action="{{#if isEdit}}/address/update{{else}}/address/store{{/if}}" method="POST" autocomplete="off">
            <div class="card-body">
               <input type="hidden" name="_id" value="{{address._id}}">
               <div class="row">
                  <label class="col-md-2">ResourceType</label>
                  <div class="col-md-4">
                     <input type="text" placeholder ="{{address.ResourceTypeError}}" {{#if address.ResourceTypeError}} class = "form-control border-danger"{{else}} class="form-control"{{/if}} name="resourceType" class="form-control" value ="{{address.resourceType}}"/>
                  </div>
                  <label class="col-md-2">Use</label>
                  <div class="col-md-4">
                     <input type="text" placeholder ="{{address.Use}}" {{#if address.Use}} class = "form-control border-danger"{{else}} class="form-control"{{/if}} name="use" class="form-control" value ="{{address.use}}"/>
                  </div>
               </div>
               <br>
               <div class="row">
                  <label class="col-md-2">Type</label>
                  <div class="col-md-4">
                     <input type="text" name="type" class="form-control" value ="{{address.type}}"/>
                  </div>
                  <label class="col-md-2">Text</label>
                  <div class="col-md-4">
                     <input type="text" name="Text" class="form-control" value ="{{address.text}}"/>
                  </div>
               </div>
               <br>
               <div class="row">
                  <label class="col-md-2">Line</label>
                  <div class="col-md-4">
                     <input type="text" name="line" class="form-control" value="{{ address.line }}"/>
                  </div>
                  <label class="col-md-2">City</label>
                  <div class="col-md-4">
                     <input type="textarea" name="city" class="form-control" value="{{ address.city }}"/>
                  </div>
               </div>
               <br>
               <div class="row">
                  <label class="col-md-2">District</label>
                  <div class="col-md-4">
                     <input type="text" name="district" class="form-control" value="{{ address.district }}"/>
                  </div>
                  <label class="col-md-2">State</label>
                  <div class="col-md-4">
                     <input type="text" name="state" class="form-control" value="{{ address.state }}"/>
                  </div>
               </div>
               <br>
               <div class="row">
                  <label class="col-md-2">PostalCode</label>
                  <div class="col-md-4">
                     <input type="text" placeholder ="{{address.postalCodeError}}" {{#if address.postalCodeError}} class = "form-control border-danger"{{else}} class="form-control"{{/if}} name="postalCode" class="form-control" value="{{ address.postalCode }}"/>
                  </div>
                  <label class="col-md-2">Country</label>
                  <div class="col-md-4">
                     <input type="text" placeholder ="{{country.countryError}}" {{#if country.countryError}} class = "form-control border-danger"{{else}} class="form-control"{{/if}} name="address" class="form-control" value="{{ country.address }}"/>
                  </div>
               </div>
               <br>
               <div class="row">
                  <label class="col-md-2">Period</label>
                  <div class="col-md-4">
                     <input type="text" type="text" name="period" class="form-control" value="{{ address.period }}" />
                  </div>
               <br>
            </div>
            <div class="card-footer">
               <center><button class="btn btn-default">Submit</button></center>
            </div>       
         </form>
      </div>
   </div>
</div>