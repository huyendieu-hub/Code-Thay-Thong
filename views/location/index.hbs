<div class="row">
    <div class="col-md-12">
        <div class="card">
          <div class="card-header no-border">
            <div class="d-flex justify-content-between">
              <a href="/locations/create" class="btn btn-primary">Thêm mới </a>
              <a href="javascript:void(0);">View Report</a>
            </div>
          </div>
          <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 5%">Id</th>
                        <th style="width: 20%">Name</th>
                        <th style="width: 20%">Telecom</th>
                        <th style="width: 20%">Address</th>
                        <th style="width: 15%"> Action</th>
                    </tr>
                </thead>
                <tbody>
                {{#each list}}
                    <tr>
                        <!--<td>{{this._id}}</td>-->
                        <td>{{incremented @index}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.telecom}}</td>
                        {{#each this.address}}
                      <td>  {{this.city}} </td>
                        {{/each}}                                              
                             <td>
                            <a href="/location/edit/{{this._id}}" class="btn btn-default">Edit</a>
                            <a href="/location/delete/{{this._id}}" class="btn btn-default">Delete</a>
                        
                        </td>
                    </tr>     
                {{/each}}
                    
                </tbody>
            </table>
          </div>
        </div>
     </div>
</div>


