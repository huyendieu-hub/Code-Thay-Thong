<div class="row">
    <div class="col-md-12">
        <div class="card">
          <div class="card-header no-border">
            <div class="d-flex justify-content-between">
              <a href="/appointment/create" class="btn btn-primary">New appointment </a>
              <a href="javascript:void(0);">View Report</a>
            </div>
          </div>
          <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>identifier</th>
                        <th>specialty</th>
                        <th>indication</th>
                        <th> Action</th>
                    </tr>
                </thead>
                <tbody>
                {{#each list}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td>{{this.identifier}}</td>
                        <td>{{this.specialty}}</td>
                        <td>{{this.indication}}</td>
                                                                     
                             <td>
                            <a href="/appointment/edit/{{this._id}}" class="btn btn-default">Edit</a>
                            <a href="/appointment/delete/{{this._id}}" class="btn btn-default">Delete</a>
                        
                        </td>
                    </tr>     
                {{/each}}
                    
                </tbody>
            </table>
          </div>
        </div>
     </div>
</div>

